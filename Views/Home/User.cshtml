@{
    ViewData["Title"] = "User Login";
}
<form action="/Home/UserCreation" class="d-grid gap-2 col-8 mx-auto" id="UserCreation" method="post">
    <label for="InputEmail1">Email:</label>
    <input required type="email" id="InputEmail1" name="Email" placeholder="please enter your Email">
    <div class="email-error"></div>

    <label for="InputPassword1">Password:</label>
    <input required type="password" id="InputPassword1" name="Password" placeholder="please enter your Password">
    <div class="password-error"></div>

    @* <input class="btn btn-primary" type="button" value="Submit"> *@
    <button type="button" onclick="UserCreation()">Create User</button>

</form><br/>
<div class="d-grid gap-4 col-8 mx-auto">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Registration">Create New Account</a>
</div>
<script>
    function UserCreation() {
        var IsError = false;
        var email = $('#InputEmail1').val();
        var password = $('#InputPassword1').val();
        debugger
        if (email == null || email == undefined || email == "" || validateEmail(email) == false) {
            $('.email-error').text("please enter email.");
            $('.email-error').css("display", "block");
            IsError = true;
        } else {
            $('.email-error').text("");
            $('.email-error').css("display", "none");
        }

        if (password == null || password == undefined || password == "" || password.length < 8 || password.length > 14) {
            $('.password-error').text("please enter password.");
            $('.password-error').css("display", "block");
            IsError = true;
        } else {
            $('.password-error').text("");
            $('.password-error').css("display", "none");
        }
        //Submit form after successfull input field completion
        if (IsError == false) {
            $('#UserCreation').submit();
        }
    }
    function validateEmail(email) {
        return email.match(
            /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0 - 9]{ 1,3}\.[0 - 9]{ 1,3}\.[0 - 9]{ 1,3}\.[0 - 9]{ 1,3}\])| (([a - zA - Z\-0 - 9] +\.)+ [a - zA - Z]{ 2,}))$/
        );
    };
</script>