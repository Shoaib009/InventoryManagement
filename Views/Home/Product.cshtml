﻿@using InventoryManagement.ViewModel
@model ProductViewModel
@{
    ViewData["Title"] = "Product List";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h2>Product List </h2>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addmodal">Add Product</button>
        </div>
    </div>
    <div class="row">

        @if (Model != null && Model.Products.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@Model.Category.Where(x => x.Id == item.CategoryId).FirstOrDefault().Name</td>
                            <td>
                                <button class="btn btn-primary" id="updateBtn" onclick="updateTask(@item.Id, '@item.Name', '@item.Price', '@item.Quantity')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger" id="deleteBtn" onclick="deleteTask(@item.Id)">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2 class="text-center py-3">No Product available.</h2>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addmodal" tabindex="-1" aria-labelledby="addmodalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addmodalLabel">Add Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="task" class="form-label">Product</label>
                    <input type="text" class="form-control" id="taskDetail" placeholder="Please enter Product name here." aria-describedby="task detail">
                    <div class="invalid-feedback task-detail-error"></div>
                </div>
                <div class="mb-3">
                    <label for="task" class="form-label">Price</label>
                    <input type="text" class="form-control" id="taskPrice" placeholder="Please enter price here." aria-describedby="task price">
                    <div class="invalid-feedback task-price-error"></div>
                </div>
                <div class="mb-3">
                    <label for="task" class="form-label">Quantity</label>
                    <input type="text" class="form-control" id="taskQuantity" placeholder="Please enter quantity here." aria-describedby="task quantity">
                    <div class="invalid-feedback task-quantity-error"></div>
                </div>
                <select id="taskCategoryId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option>Please select the categoty</option>
                    @foreach (var x in Model.Category)
                    {
                        <option value="@x.Id">@x.Name</option>
                    }
                </select>
                <div class="invalid-feedback task-CategoryId-error"></div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveTask()">Save Task</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updatemodal" tabindex="-1" aria-labelledby="updatemodalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updatemodalLabel">Update Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="task" class="form-label">Product</label>
                    <input type="text" class="form-control" id="updateTaskDetail" aria-describedby="task detail">
                    <div class="invalid-feedback task-detail-error"></div>
                    <label for="task" class="form-label">Price</label>
                    <input type="text" class="form-control" id="updatePriceDetail" aria-describedby="task price">
                    <div class="invalid-feedback task-price-error"></div>
                    <label for="task" class="form-label">Quantity</label>
                    <input type="text" class="form-control" id="updateQuantityDetail" aria-describedby="task quantity">
                    <div class="invalid-feedback task-quantity-error"></div>
                    <select id="updateCategoryId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                        <option>Please select the categoty</option>
                        @foreach (var x in Model.Category)
                        {
                            <option value="@x.Id">@x.Name</option>
                        }
                    </select>
                    <div class="invalid-feedback task-CategoryId-error"></div>
                    <input type="hidden" id="updateTaskId">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="triggerUpdateApi()">Update Category</button>
            </div>
        </div>
    </div>
</div>

<script>
    function saveTask() {
        // validation
        var taskName = $("#taskDetail").val();
        var taskPrice = $('#taskPrice').val();
        var taskQuantity = $('#taskQuantity').val();
        var taskCategoryId = $('#taskCategoryId').val();
        if (taskName == null || taskName == undefined || taskName == "" || taskName == null || taskPrice == undefined ||
            taskPrice == "" || taskQuantity == null || taskQuantity == undefined || taskQuantity == "" || taskCategoryId == null ||
            taskCategoryId == undefined || taskCategoryId == 0
        ) {
            $(".task-detail-error").text("Please enter Product name");
            $(".task-price-error").text("Please enter Price");
            $(".task-quantity-error").text("Please enter Qunatiy");
            $(".task-CategoryId-error").text("Please select category from the dropdown list");
            $(".task-detail-error").css("display", "block");
            $(".task-price-error").css("display", "block");
            $(".task-quantity-error").css("display", "block");
            $(".task-CategoryId-error").css("display", "block");

            return;
        } else {
            $(".task-detail-error").text("");
            $(".task-price-error").text("");
            $(".task-quantity-error").text("");
            $(".task-CategoryId-error").text("");
            $(".task-detail-error").css("display", "none");
            $(".task-price-error").css("display", "none");
            $(".task-quantity-error").css("display", "none");
            $(".task-CategoryId-error").css("display", "none");


        }
        // then ajax call
        var request = { Name: taskName, Price: taskPrice, Quantity: taskQuantity, CategoryId: taskCategoryId };
        $.ajax({
            type: 'POST',
            url: '/Home/CreateProduct',
            data: JSON.stringify(request),
            contentType: 'application/json',
            dataType: "JSON",
            success: function (response) {
                debugger
                if (response.success) {
                    $('#addmodal').modal('hide');
                    $("#taskDetail").val("");
                    $("#taskPrice").val("");
                    $("#taskQuantity").val("");
                    $("#taskCategoryId").val("");
                    alert(response.message);
                    window.location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("something went wrong, Please try again later.");
            }
        });
        // show success or error messgage
    }

    function deleteTask(id) {
        var userConfirmed = confirm("Are you sure you want to delete this Product?");
        if (userConfirmed) {
            var xyz = { Id: id };
            $.ajax({
                type: 'POST',
                url: '/home/DeleteProduct',
                data: JSON.stringify(xyz),
                contentType: 'application/json',
                dataType: 'json',
                success: function (response) {
                    if (response.success == true) {
                        alert(response.message);
                        window.location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("An error occurred, please try again later. ");
                }
            });
        }
    }

    function updateTask(id, Name, Price, Quantity, CategoryId) {
        $('#updatemodal').modal('show');
        $("#updateTaskDetail").val(Name);
        $('#updatePriceDetail').val(Price);
        $('#updateQuantityDetail').val(Quantity);
        $('#updateCategoryId').val(CategoryId);
        $("#updateTaskId").val(id);
    }

    function triggerUpdateApi() {
        var id = $("#updateTaskId").val();
        var productDetail = $("#updateTaskDetail").val();
        var productPrice = $('#updatePriceDetail').val();
        var productQuantity = $('#updateQuantityDetail').val();
        var productCategoryId = $('#updateCategoryId').val();

        var request = { Id: id, Name: productDetail, Price: productPrice, Quantity: productQuantity, CategoryId: productCategoryId };
        $.ajax({
            type: 'POST',
            url: '/Home/UpdateProduct',
            data: JSON.stringify(request),
            contentType: 'application/json',
            dataType: "JSON",
            success: function (response) {
                debugger
                if (response.success) {
                    $('#updatemodal').modal('hide');
                    $("#updateTaskDetail").val("");
                    $('#updatePriceDetail').val("");
                    $('#updateQuantityDetail').val("");
                    $('#updateCategoryId').val("");
                    $("#updateTaskId").val("");

                    alert(response.message);
                    window.location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("something went wrong, Please try again later.");
            }
        });
    }
</script>